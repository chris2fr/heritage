<%= semantic_form_for @story do |f| %>
	<%= f.inputs :name => "Basic" do %>
		<%= f.input :title %>
		<%= f.input :description %>
	<% end %>

	<%= f.actions do %>
		<%= f.action :submit, :as => :button, :button_html => {:class => "primary"} %>
		<%= f.action :cancel, :as => :link %>
	<% end %>
<% end %>
