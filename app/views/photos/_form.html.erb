<%= semantic_form_for @photo, :url => story_photo_path(@story, @photo.permalink || @photo.id), :html => {:method => :put} do |f| %>
	<%= f.input :title, :input_html => { :class => 'input-xxlarge' } %>
	<%= f.input :description, :input_html => { :class => 'input-xxlarge', :rows => 10 } %>
	<%= f.input :tag_list, :input_html => { :class => 'input-xxlarge' }, :hint => "Enter, your, tags, with, commas" %>
	<%= f.actions do %>
		<%= f.action :submit, :as => :button, :button_html => { :class => "btn btn-primary" } %>
	<% end %>
<% end %>
